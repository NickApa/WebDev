
@{
    ViewData["Title"] = "Color Interpolator";
}

<h2>Interpolate from one color to another</h2>
<p>Please enter colors in HTML hexadecimal format #AABBCC</p>

<div class="row">
    <div class="col-sm-2">
        <form>
            <label>First Color</label>
            <input type="text"  />
            <label>Second Color</label>
            <input type="text"  />
            <label>Number of Colors</label>
            <input type="number"  />
            <p> </p>
            <button class="btn btn-primary" type="submit">Generate Colors</button>
        </form>
        
    </div>

    <div class="col">
        <table>
            <thead>HTML</thead>
            <thead>Color</thead>
        </table>
    </div>
</div>